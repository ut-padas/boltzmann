\mode<presentation>

\usepackage{textcase}
\usepackage{xcolor}
\usepackage{setspace}
\usepackage[T1]{fontenc}

% Define colors from UT web page
\definecolor{burntorange}{RGB}{191,87,0}
\definecolor{rightfooterorange}{RGB}{248,151,31}
\definecolor{pms432}{RGB}{51,63,72}
\definecolor{pms7572}{RGB}{214,210,196}
\definecolor{pms7543}{RGB}{156,173,183}

% beamer customizations
\setbeamercolor{footlinecolor}{fg=white,bg=burntorange}
\setbeamercolor{footerright}{fg=black,bg=pms7572}
\setbeamercolor{frametitle}{fg=pms432}
\setbeamerfont{frametitle}{size=\huge,family={\fontfamily{bch}}}
\setbeamersize{text margin left=0.65cm}

% tweak list bullets
\setbeamertemplate{itemize items}[circle]
\setbeamertemplate{itemize subitem}{--}
\setbeamertemplate{itemize subsubitem}{\raisebox{0.2em}{\scalebox{0.7}{\textbullet}}}
%\setbeamertemplate{itemize/enumerate body begin}{\fontsize{8.8}{9}\selectfont}
%\setbeamertemplate{itemize/enumerate subbody begin}{\fontsize{7.5}{8}\selectfont}
%\setbeamertemplate{itemize/enumerate subsubbody begin}{\fontsize{7.5}{8}\selectfont}

\setbeamercolor{item}{fg = burntorange}
\setbeamercolor{subitem}{fg = black}
\setbeamercolor{subsubitem}{fg = black}

% block colors
\setbeamercolor{block title}{fg = black, bg = pms7572}
\setbeamercolor{block body}{fg = black, bg = white}

% customize footer with logos
\setbeamertemplate{footline}{%
 \hbox{%
  \begin{beamercolorbox}[wd=0.965\paperwidth,ht=12.pt]{footlinecolor}%
    \hspace{0.2cm}%
    \includegraphics[height=11.3pt,trim=0 0 0 5,clip]{KO_oden_wide.png}
    \hspace{12.2cm}%
    \includegraphics[height=11.3pt,trim=0 55 520 0,clip]{grand_logo_reverse.eps}%
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=0.035\paperwidth,ht=12.pt,center,sep=1.5ex]{footerright}%
    {\fontsize{5.0}{0}\selectfont\insertframenumber} 
  \end{beamercolorbox}}%
}

% customize frametitle
 \makeatletter
 \setbeamertemplate{frametitle}{
     \ifbeamercolorempty[bg]{frametitle}{}{\nointerlineskip}%
     \@tempdima=\textwidth%
     \advance\@tempdima by\beamer@leftmargin%
     \advance\@tempdima by\beamer@rightmargin%
     \vspace*{0.45cm}%
     \hspace*{0.5cm} %%%%%%%%%%%%% For example insert shift to right
     \begin{beamercolorbox}[sep=0.3cm,left,wd=\the\@tempdima]{frametitle}
         \usebeamerfont{frametitle}%
         \vbox{}\vskip-1ex%
         \if@tempswa\else\csname beamer@ftecenter\endcsname\fi%
         \strut\insertframetitle\strut\par%
         {%
             \ifx\insertframesubtitle\@empty%
             \else%
             {\usebeamerfont{framesubtitle}\usebeamercolor[fg]{framesubtitle}\insertframesubtitle\strut\par}%
             \fi
         }%
         \vskip-1ex%
         \if@tempswa\else\vskip-.3cm\fi% set inside beamercolorbox... evil
 				% here...
     \end{beamercolorbox}%
     \vspace*{0.45cm}%
 
} 


